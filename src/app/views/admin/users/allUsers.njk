{% extends "admin/common/layout.njk" %}

{% block head %}
  <title>Usuários</title>
  <link rel="stylesheet" href="/admin/users.css">
{% endblock %}

{% block content %}
<h3>Usuários</h3>
<button class="btn btn-new"><a href="/admin/users/create">Novo</a></button>

<div class="wrapper-users"> 
{% for user in allUsers %}
  <div class="users">
    <p class="user-name">{{user.name}}</p>
    <p class="user-email">{{user.email}}</p>
    <div class="user-links">
      <a href="/admin/users/{{user.id}}/edit">Editar</a>
      {# <a href="/admin/users">Remover</a> #}
      <form action="/admin/users?_method=DELETE" method="post">
        <input type="hidden" name="id" value='{{user.id}}'>
        <button type="submit">Remover</button>
      </form>
    </div>
  </div>
{% endfor %} 
</div>

{% endblock %}
